@model IEnumerable<EventManagementSystem.Models.Event>

@{
    ViewData["Title"] = "Upcoming Events";
}

<h1>Upcoming Events</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Address</th>
            <th>Category</th>
            <th>Assigned User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Date.ToString("dd MMM yyyy")</td>
                <td>@item.Address</td>
                <td>@item.Category</td>
                <td>@(item.AssignedUser?.FirstName + " " + item.AssignedUser?.LastName)</td>
            </tr>
        }
    </tbody>
</table>