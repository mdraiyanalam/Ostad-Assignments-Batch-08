@model IEnumerable<EventManagementSystem.Models.Event>

@{
    ViewData["Title"] = "All Events";
}

<h1>All Events</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Address</th>
            <th>Category</th>
            <th>Assigned User</th>
        </tr>
    </thead>
    <tbody>
        @{
            var events = Model != null ? Model : Enumerable.Empty<EventManagementSystem.Models.Event>();
        }
        @foreach (var item in events)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Date.ToString("dd MMM yyyy")</td>
                <td>@item.Address</td>
                <td>@item.Category</td>
                <td>@(item.AssignedUser != null ? item.AssignedUser.FirstName + " " + item.AssignedUser.LastName : "N/A")</td>
            </tr>
        }
    </tbody>
</table>