@model BookManagementApp.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<h2>Details</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Model.Title</dd>
        <dt>Author</dt>
        <dd>@Model.Author</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>
    </dl>
    <a asp-action="Index">Back to List</a>
</div>